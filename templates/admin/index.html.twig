        <div class="container">
        
        {{ form_start(form)}}
        <div class="row">
            
                <div class="col-md-8">{{ form_row(form.title)}}</div>
                <div class="col-md-8">{{ form_row(form.content)}}</div>
            
                <div class="col-md-4">
                {% if item.filename %}
                        
                        <img src="{{ vich_uploader_asset(item, 'imageFile' ) | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; height: auto;">
                {% else %}
                        <img src="{{ 'images/items/empty.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; height: auto;">

                {% endif %}
                    {{ form_row(form.imageFile)}}
                    {{ form_row(form.category)}}
                    {{ form_row(form.tags)}}
                    {{ form_row(form.visible)}}
                    <button class="btn btn-primary">{{ button|default('Enregistrer')}}</button>
                </div>

            
        </div>
        {{ form_end(form)}}
        </div>